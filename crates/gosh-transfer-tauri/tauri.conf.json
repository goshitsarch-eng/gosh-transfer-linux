{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gosh Transfer",
  "version": "2.20.0",
  "identifier": "com.gosh.Transfer",
  "build": {
    "frontendDist": "../../src-ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": {
      "script": "npm run dev",
      "cwd": "../../src-ui"
    },
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "../../src-ui"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Gosh Transfer",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "../../assets/icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "../../assets/icons/32x32.png",
      "../../assets/icons/128x128.png",
      "../../assets/icons/128x128@2x.png"
    ],
    "resources": [],
    "category": "Utility",
    "shortDescription": "Simple, explicit file transfers over LAN and VPNs",
    "longDescription": "A clean, explicit file transfer application for Linux that works over LAN, Tailscale, and other VPNs.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libssl3", "libwebkit2gtk-4.1-0"],
        "section": "net",
        "priority": "optional"
      },
      "rpm": {
        "release": "1"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
